doctype
html(lang='en')
	head
		title #{title} 
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src='bower_components/angular/angular.js')
		script(src='bower_components/angular-ui-router/release/angular-ui-router.js')
		script(src='bower_components/angular-sanitize/angular-sanitize.js')
		script(src='main.js')
	body(ng-app='myApp')
		div.box
			header
				embed(src="logo.svg")  
			.container
				.main-content
					div(ng-controller='LoginCtrl')
						.tab#mylogin(ng-model="myColor1" ng-style="{'background-color': myColor1}" ng-click="switchTab(true)")
							p Login
						.tab#register(ng-model="myColor2" ng-style="{'background-color': myColor2}" ng-click="switchTab(false)")
							p Register
						.login_div
							#loginform(ng-show="login")
								//- h1 {{name}}
								form(action="/" method="post")
									label Username:
									input(type="text" name="uname")
									br
									label Password:
										input(type="password" name="pword")
									br
									button(value="Submit") Submit
							#registerform(ng-hide="login")
								form(action="/" method="post")
									label Username:
									input(type="text" name="uname")
									br
									label First Name:
									input(type="text" name="fname")
									br
									label Last Name:
									input(type="text" name="lname")
									br
									label Password:
										input(type="password" name="pword")
									br
									button(value="Submit") Submit
		script(src='main.js')
