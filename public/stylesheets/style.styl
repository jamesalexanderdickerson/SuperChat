/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color, secondary color and
 * background color as variables
 */
main-color = #ff5a4a
second-color = #ffb2ab
backgroundcolor = #ebf2ec
old-message = darken(main-color, 50%)

*
  margin 0
  padding 0
  box-sizing border-box


body
  font-family 'Georgia'
  font-size 18px
  background-color backgroundcolor
  color #444

header
  font-family 'Quicksand'
  padding 50px 10px
  color #fff
  font-size 25px
  text-align center

  #myname
    float: right;
    margin-top: -50px

  h1
    font-size 2em

  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 900px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 100%

  p
    margin-bottom 20px

p
  line-height 1.8
  padding: 0;
  box-sizing: border-box;

form#chatform
  background second-color
  padding 3px
  position fixed
  bottom 0
  width 100%

form#chatform input#m
  border 0
  padding 10px
  width 90%
  margin-right .5%

form button
  width 9%
  background main-color
  border none
  padding 10px

#messages
  list-style-type none
  margin 0
  padding 0
  border: 1px solid main-color
  border-radius 5px
  height 280px
  overflow scroll

#messages li
  padding 5px 10px

#messages li:nth-child(odd)
  background main-color

#messages li:nth-child(even)
  background second-color

#o_message
  color old-message

footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px

#messages
  &.shake
    animation shake 0.82s cubic-bezier(.36,.07,.19,.97) both
    transform translate3d(0, 0, 0)
    backface-visibility hidden
    perspective 1000px

@keyframes shake
  10%, 90%
    transform translate3d(-1px, 0, 0)

  20%, 80%
    transform translate3d(2px, 0, 0)

  30%, 50%, 70%
    transform translate3d(-4px, 0, 0)

  40%, 60%
    transform translate3d(4px, 0, 0)

.tab
  display: inline-block;
  margin-left: 5px;
  padding: 5px;
  height: 50px
  cursor: pointer;
  border-top-left-radius: 5px
  border-top-right-radius: 5px
  background-color: main-color;
  margin-bottom: 0;

#mylogin
  margin-left: 5px
#register
  background-color: second-color
#loginform
  width: 100%
#registerform
  width: 100%

#tryAgain
  background-color: main-color
  width: 9%
  padding: 10px
  border: none

.login_div
  background-color main-color
  width: 100%
  margin: 5px
  margin-top: 0
  padding: 10px
  border-radius: 0 5px 5px 5px
  form
    margin: 0 auto
    width: 850px
    text-align: center;
    input
      height: 30px
      border: none
      margin: 10px
      margin-left: 50px
      width: 200px
      padding: 5px
    button
      margin-left: 250px
      background-color second-color
    #mainView
      border: 1px solid black
      clear: both;
      padding 0 1em
    .active
      background-color #FFF
      color #000
